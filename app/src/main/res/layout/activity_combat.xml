<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CombatActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/EndCombat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp">


                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/R_ippon_plus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/plus"
                                android:textColor="@color/buttonTextDark"
                                app:backgroundTint="@color/redButton"
                                tools:ignore="ButtonStyle" />

                            <Button
                                android:id="@+id/R_waza_plus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/plus"
                                android:textColor="@color/buttonTextDark"
                                app:backgroundTint="@color/redButton"
                                tools:ignore="ButtonStyle" />

                            <Button
                                android:id="@+id/R_shido_plus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/plus"
                                android:textColor="@color/buttonTextDark"
                                app:backgroundTint="@color/redButton"
                                tools:ignore="ButtonStyle" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/ippon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/waza" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/shido" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/R_ippon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="0"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/R_waza"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="0"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/R_shido"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="0"
                                tools:ignore="HardcodedText" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/R_ippon_minus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/minus"
                                android:textColor="@color/buttonTextDark"
                                app:backgroundTint="@color/redButton"
                                tools:ignore="ButtonStyle" />

                            <Button
                                android:id="@+id/R_waza_minus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/minus"
                                android:textColor="@color/buttonTextDark"
                                app:backgroundTint="@color/redButton"
                                tools:ignore="ButtonStyle" />

                            <Button
                                android:id="@+id/R_shido_minus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/minus"
                                android:textColor="@color/buttonTextDark"
                                app:backgroundTint="@color/redButton"
                                tools:ignore="ButtonStyle" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/CombattantR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="#D10A0A"
                                android:textSize="24sp" />
                        </TableRow>
                    </TableLayout>

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp">


                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/B_ippon_plus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/plus"
                                android:textColor="@color/buttonTextDark"
                                app:backgroundTint="@color/whiteButton"
                                tools:ignore="ButtonStyle" />

                            <Button
                                android:id="@+id/B_waza_plus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/plus"
                                android:textColor="@color/buttonTextDark"
                                app:backgroundTint="@color/whiteButton"
                                tools:ignore="ButtonStyle" />

                            <Button
                                android:id="@+id/B_shido_plus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/plus"
                                android:textColor="@color/buttonTextDark"
                                app:backgroundTint="@color/whiteButton"
                                tools:ignore="ButtonStyle" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/ippon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/waza" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/shido" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/B_ippon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="0"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/B_waza"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="0"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/B_shido"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="0"
                                tools:ignore="HardcodedText" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/B_ippon_minus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/minus"
                                android:textColor="@color/buttonTextDark"
                                app:backgroundTint="@color/whiteButton"
                                tools:ignore="ButtonStyle" />

                            <Button
                                android:id="@+id/B_waza_minus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/minus"
                                android:textColor="@color/buttonTextDark"
                                app:backgroundTint="@color/whiteButton"
                                tools:ignore="ButtonStyle" />

                            <Button
                                android:id="@+id/B_shido_minus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/minus"
                                android:textColor="@color/buttonTextDark"
                                app:backgroundTint="@color/whiteButton"
                                tools:ignore="ButtonStyle" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/CombattantB"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textSize="24sp" />
                        </TableRow>

                    </TableLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/startTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/start"
                    app:backgroundTint="@color/buttonClassique" />

                <TextView
                    android:id="@+id/Timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="20dp"
                    android:text="3:00"
                    android:textSize="30sp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/pauseTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="0.25"
                    android:text="@string/pause"
                    app:backgroundTint="@color/buttonClassique" />
            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/prepare"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/se_pr_pare"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/FuturcombattantRed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text=""
                        android:textColor="#D10A0A"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/contre"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/FuturcombattantBlanc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text=""
                        android:textSize="16sp" />

                </LinearLayout>

            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/EndCombat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fin_du_combat"
        app:backgroundTint="@color/buttonClassique"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>